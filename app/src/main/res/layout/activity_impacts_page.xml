<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    tools:context=".impacts_page"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/subcharacterButton"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="340dp"
        android:background="@drawable/character_bar"
        app:layout_constraintBottom_toTopOf="@+id/buttonImpacts2"
        app:layout_constraintEnd_toStartOf="@+id/subcalculatorButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/subimpactsButton"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/impacts_bar"
        app:layout_constraintEnd_toStartOf="@+id/subcalculatorButton"
        app:layout_constraintStart_toEndOf="@+id/subcharacterButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/subcalculatorButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/calculator_bar"
        app:layout_constraintBottom_toBottomOf="@+id/subimpactsButton"
        app:layout_constraintEnd_toStartOf="@+id/subaboutButton"
        app:layout_constraintStart_toEndOf="@+id/subcharacterButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/subaboutButton"
        android:layout_width="100dp"
        android:layout_height="54dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/about_bar"
        app:layout_constraintBottom_toTopOf="@+id/buttonImpacts1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subcalculatorButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="201dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subcharacterButton"
        app:srcCompat="@drawable/impacts_title" />

    <Button
        android:id="@+id/buttonImpacts1"
        android:layout_width="357dp"
        android:layout_height="117dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="398dp"
        android:background="@drawable/elnino_final"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subaboutButton" />

    <Button
        android:id="@+id/buttonImpacts2"
        android:layout_width="0dp"
        android:layout_height="119dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="264dp"
        android:background="@drawable/lanina_final"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subcharacterButton" />

    <Button
        android:id="@+id/buttonImpacts3"
        android:layout_width="357dp"
        android:layout_height="117dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/regionalclimate_final"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonImpacts2" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/home_final"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>